{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch Linux(web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet build",
      "program": "${workspaceFolder}/georges-rogers-api/bin/Debug/net6.0/georges-rogers-api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/georges-rogers-api",
      "stopAtEntry": false,
      "justMyCode": true, // You can change to false if you wanna debug 3rd-party code
      "logging": {
        "moduleLoad": false
      },
      // "serverReadyAction": {
      //     "action": "openExternally",
      //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      // },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
      // "sourceFileMap": {
      //   "/Views": "${workspaceFolder}/georges-rogers-api/Views"
      // }
    },
    {
      "name": "Launch Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:4200/caseweigher-viewer/summary/demo",
      "webRoot": "${workspaceFolder}/georges-rogers-app",
      "skipFiles": ["${workspaceFolder}/georges-rogers-app/node_modules/**/*.js"],
      "preLaunchTask": "npm: start"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4200/caseweigher-viewer/summary/demo",
      "webRoot": "${workspaceFolder}/georges-rogers-app",
      "skipFiles": ["${workspaceFolder}/georges-rogers-app/node_modules/**/*.js"],
      "preLaunchTask": "npm: start"
    }
  ],
  "compounds": [
    {
      "name": "Full stack",
      "configurations": [".NET Core Launch Linux(web)", "Launch Edge"]
    }
  ]
}
